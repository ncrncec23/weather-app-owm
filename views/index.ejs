<%- include("header") %>

    <body>
        <header>
            <!-- Top section -->
            <div class="top">
                <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-top">
                    <h1 class="permanent-marker-regular">CloudMate</h1>
                    <label class="ui-switch">
                        <input type="checkbox">
                        <div class="slider">
                            <div class="circle"></div>
                        </div>
                    </label>
                </div>
                <!-- City/Town search form -->
                <form action="/search" method="GET" class="search-form">
                    <input type="text" placeholder="Unesite mjesto" class="search-input" />
                    <button type="submit" class="search-button">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </header>

        <main>
            <div class="display-current-weather">
                <!-- Content of current weather -->
                <div class="current-weather d-flex flex-column">

                    <!-- Current Weather icon and description -->
                    <div class="weather-icon mb-4 d-flex flex-row justify-content-left align-items-center">
                        <img src="https://openweathermap.org/img/wn/10d@2x.png" alt="weat-icon" class="weat-img" />
                        <p class="description text-center m-0">Vedro</p>
                    </div>

                    <!-- Basic Weather information -->
                    <div class="weather-info">

                        <!-- City/Town name -->
                        <h2 class="city-name staatliches-regular text-center mt-3">Sračinec</h2>

                        <!-- Real temperature -->
                        <div class="d-flex flex-row justify-content-center align-items-center gap-3">
                            <p class="temperature text-center m-0">23°C </p>
                        </div>

                        <!-- Seems like temperature-->
                        <p class="seems-like text-center mb-3">Čini se kao: 20°C</p>
                    </div>

                    <!-- Max and min temperature -->
                    <div class="d-flex flex-row justify-content-between align-items-center gap-3 mt-3">
                        <div class="max-temp w-100">
                            <p class="description-max text-center">Max temp</p>
                            <p class="temperature-max text-center">25°C</p>
                        </div>
                        <div class="min-temp w-100">
                            <p class="description-min text-center">Min temp</p>
                            <p class="temperature-min text-center">22°C</p>
                        </div>
                    </div>
                </div>

                <div class="current-weather-card">
                    <!-- Detailed weather information -->
                    <h2 class="dwi">Meteorološki podaci</h2>

                    <!-- Cards for humidity, presure and cloudiness -->
                    <div class="detailed-info d-flex flex-column justify-content-between align-items-center mt-4 gap-2">
                        <!-- Pressure -->
                        <div class="pressure w-100 d-flex flex-row justify-content-center align-items-center gap-3">
                            <i class="fas fa-gauge font-icons"></i>
                            <p class="pressure-title m-0">Tlak</p>
                            <p class="bg-value pres">1012 <span class="hpa">hPa</span></p>
                        </div>

                        <!-- Humidity -->
                        <div class="humidity w-100 d-flex flex-row justify-content-center align-items-center gap-3">
                            <i class="fas fa-droplet font-icons"></i>
                            <p class="humidity-title m-0">Vlažnost</p>
                            <p class="bg-value">60%</p>
                        </div>

                        <!-- Cloudiness -->
                        <div class="cloudiness w-100 d-flex flex-row justify-content-center align-items-center gap-3">
                            <i class="fas fa-cloud font-icons"></i>
                            <p class="cloudiness-title m-0">Naoblaka</p>
                            <p class="bg-value">20%</p>
                        </div>

                        <!-- Wind speed -->
                        <div class="wind-speed w-100 d-flex flex-row justify-content-center align-items-center gap-3">
                            <i class="fa-solid fa-wind font-icons"></i>
                            <p class="wind-title m-0">Vjetar</p>
                            <p class="bg-value">5 <span class="hpa">km/h</span></p>
                        </div>
                    </div>
                </div>


                <!-- Forecast section -->
                <div class="forecast-section mt-4">
                    <h2 class="forecast-title">Prognoza</h2>
                    <!-- Daily forecast -->
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <!-- Daily forecast items -->
                        <%- include("daily_forecast", {index: "One" }) %>
                            <%- include("daily_forecast", {index: "Two" }) %>
                                <%- include("daily_forecast", {index: "Three" }) %>
                                    <%- include("daily_forecast", {index: "Four" }) %>
                                        <%- include("daily_forecast", {index: "Five" }) %>
                    </div>
                </div>
            </div>
        </main>

        <div id="map" style="width: 100%; height: 400px;"></div>

        <!-- Footer section -->
        <footer>
            <%- include("footer") %>
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

        <!-- Personal JS -->
        <script src="js/app.js"></script>
    </body>

    </html>